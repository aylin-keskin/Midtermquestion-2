#include "main.h"

void init_leds()
{
	RCC->AHB1ENR = 0x00000008;
	GPIOD->MODER = 0x40000000;
	GPIOD->OTYPER = 0x00000000;
	GPIOD->OSPEEDR = 0x8000000;
	GPIOD->PUPDR = 0x00000000;
}
void turn_name_on()
{
	GPIOD->ODR |= 0x0000F000;
}
void turn_name_off()
{
	GPIOD->ODR &=~ 0x0000F000;
}
void turn_surname_on()
{
	GPIOD->ODR |= 0x0000F000;
}
void turn_surname_off()
{
	GPIOD->ODR &=~ 0x0000F000;
}

void System_Config(void)
{
	RCC->CR |= 0x00030000;
	while(!(RCC->CR & 0x00020000));
	RCC->CR |= 0x00080000;
	RCC->PLLCFGR |= 0x00400000;
	RCC->PLLCFGR |= 0x00000004;
	RCC->PLLCFGR |= 0x00005A00;
	RCC->PLLCFGR |= 0x00000000;
	RCC->CFGR |= 0x00000000;
	RCC->CFGR |= 0x00080000;
	RCC->CFGR |= 0x00001400;
	RCC->CIR |= 0x00800000;
}

void Bekleme(uint32_t zaman)
{
	while(zaman--);
}
int main(void)
{
  System_Config();
  init_leds();
  while (1)
  {
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  turn_name_on();
	  Bekleme(1200000);
	  turn_name_off();
	  Bekleme(1200000);
	  Bekleme(3000000);

  }

}
